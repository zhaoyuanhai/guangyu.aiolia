@using Newtonsoft.Json.Linq;
@model JArray
@{
    ViewBag.Title = "ThreeModule";
}

<div>
    <a href="@Url.Action("AddThreeModule")" class="btn btn-lg">添加</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>图片</th>
                <th>链接</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item["path"]" width="100" height="100" alt="图片" />
                    </td>
                    <td>@item["url"]</td>
                    <td>
                        <a href="@Url.Action("EditThreeModule",new { id = item["id"] })">编辑</a>
                        <a href="@Url.Action("DeleteThreeModule",new { id = item["id"] })" onclick="return confirm('确认删除吗?')">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

