@using Newtonsoft.Json.Linq;
@model JObject
@{
    ViewBag.Title = "EditDetail";
}

<link href="~/Scripts/umeditor/themes/default/css/umeditor.min.css" type="text/css" rel="stylesheet">
<script type="text/javascript" src="~/scripts/umeditor/third-party/template.min.js"></script>
<script type="text/javascript" charset="utf-8" src="~/scripts/umeditor/umeditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="~/scripts/umeditor/umeditor.min.js"></script>
<script type="text/javascript" src="~/Scripts/umeditor/lang/zh-cn/zh-cn.js"></script>


<div>
    <form action="@Url.Action("EditDetail")" method="post">
        <div class="form-group">
            <label for="name">标题</label>
            <input type="text" name="title" value="@Model["title"]" class="form-control" id="name" placeholder="请输入标题">
        </div>
        <div class="form-group">
            <label for="">内容</label>
            <script type="text/plain" name="content" id="myEditor" style="width:100%;height:240px;">
                @MvcHtmlString.Create(Model["content"].ToString())
            </script>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>

<script>
    var um = UM.getEditor('myEditor');
</script>